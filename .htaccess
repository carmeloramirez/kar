RewriteEngine on

# Redirect to domain without www.
RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule .* http://%1%{REQUEST_URI} [R=301,L]
# Same for HTTPS:
RewriteCond %{HTTPS} on
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule .* https://%1%{REQUEST_URI} [R=301,L]

# Redirect to another domain: kar.cat.
RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} !^(www\.)?kar\.cat$ [NC]
RewriteRule .* http://kar.cat%{REQUEST_URI} [R=301,L]
# Same for HTTPS:
RewriteCond %{HTTPS} on
RewriteCond %{HTTP_HOST} !^(www\.)?kar\.cat$ [NC]
RewriteRule .* https://kar.cat%{REQUEST_URI} [R=301,L]